@require '../variables';

app-menu {
	display: block;
	position: absolute;
	top: $tool-button-size;
	left: 0;

	user-select: none;
	z-index: 10; // keep on top of the flyout
}

.app-menu__list {
	width: $app-button-size;
	height: 100%;

	flex-direction: column;
	align-items: flex-start;
	justify-content: center;
}

.app-menu__item {
	display: flex;
	width: 100%;
	height: 48px;

	align-items: center;

	border-bottom: 1px solid $color-secondary;

	&:first-child {
		border-top: none;
	}

	&:last-child {
		border-bottom: none;
	}

	i[class^="icon-"] {
		pointer-events: none;
		padding: 0 8px 0;
	}
}
