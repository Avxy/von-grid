@require '../variables';

lightbox {
	width: 100%;
	height: @width;
}

.lightbox__overlay {
	width: 100%;
	height: @width;

	background-color: rgba(255,255,255,0.8);
}

.lightbox__panel {
	min-width: 300px;
	min-height: 100px;
	padding: 10px;
	z-index: 99999;

	text-align: center;

	background-color: $color-bg;
	color: #000;
}