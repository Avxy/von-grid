@require '../variables';

form-newtile.flex-container {
	width: 100%;
	flex-direction: column;
	align-items: flex-start;

	color: #fff;

	button {
		align-self: flex-end;
		margin: 0;
	}

	& > * {
		margin-bottom: 10px;
	}

	input {
		margin: 0 5px;
		height: 30px;
	}

	input[type=file] {
		margin: 5px 0;
	}

	input[type=checkbox] {
		width: 18px;
		height: 18px;
	}

	label {
		display: flex;
		flex-direction: row;
		align-items: center;
	}
}

.form-newtile__error {
	color: #ff0;
	font-size: 0.9em;
	max-width: 250px;
}