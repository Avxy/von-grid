@require 'variables';

* {
	box-sizing: border-box;
}

body {
	overflow: hidden;
	font-family: Verdana, Helvetica, sans-serif;
}

button {
	border: none;
	outline: none;
	background-color: $color-highlight;
	color: #fff;
	padding: 5px 10px;
	margin: 0 10px 10px 10px;

	&:hover {
		background-color: lighten($color-highlight, 30%);
	}

	&:active {
		background-color: darken($color-highlight, 30%);
	}
}

input[type='number'],
input[type='text'] {
	width: 70px;
	font-size: 18px;
	margin-bottom: 5px;
	padding-left: 5px;

	border: none;
	border-bottom: 2px solid $color-primary;
	background: none;
	color: #fff;

	&:hover {
		border-color: $color-secondary;
	}
}

select {
	display: inline-block;
	width: 100%;
	height: 34px;

	font-size: 18px;
	line-height: 1;

	outline: none;
	border: 0;
	background-color: #f8f8f8;
}

ul.btn-list {
	list-style-type: none;
	display: flex;
	flex-wrap: wrap;
}

ul.btn-list > li {
	background-color: $color-primary;
	color: #000;
	cursor: pointer;

	&:hover {
		background-color: $color-secondary;
		border-color: $color-primary;
	}

	&:active {
		background-color: $color-highlight;
		color: #fff;
	}

	&.active {
		background-color: $color-highlight;
		color: #fff;

		&:hover {
			background-color: $color-highlight;
		}
	}
}

.overlay__close-btn {
	position: absolute;
	top: -25px;

	line-height: 30px;
	font-size: 18px;
	border: 2px solid white;

	&.left {
		right: -25px;
	}

	&.right {
		left: -25px;
	}
}

.form-group {
	border: 1px dashed white;
	padding: 8px;
	margin: 10px 5px;
	width: 100%;

	&:last-child {
		margin-bottom: 0;
	}

	button {
		float: right;
		margin-right: 0;
		margin-bottom: 0;
	}
}

.absolute {
	position: absolute;
	top: 0;
	left: 0;
}

.flex-container {
	display: flex;
	align-items: center;
	justify-content: center;
}

.hidden {
	display: none;
}